extends ../layout

block content
	h2 New Document
	form(method='post', action='/documents/new')
		input(name='userId', value=userId, type='hidden')
		div
			label Title:
			input(name='title', value=doc.title || '')
		div
			label Note:
			textarea(name='data')
				=doc.data || ''
		div
			input(type='submit', value='Save')